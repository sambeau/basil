// Environment variables available in this template:
//
// devtools (Dictionary)
//   .route (String)          - Route filter (empty string for all routes)
//   .logs (Array)            - Log entries as array of dictionaries
//     Each element is a Dictionary with:
//       .level (String)      - Log level ("info" or "warn")
//       .filename (String)   - Base filename where log was called
//       .line (Integer)      - Line number where log was called
//       .timestamp (String)  - Formatted timestamp ("2006-01-02 15:04:05")
//       .call (String)       - Function call representation
//       .value (String)      - Logged value representation
//   .log_count (Integer)     - Number of log entries
//   .clear_url (String)      - URL to clear logs for this route
//
// basil (Dictionary)
//   .version (String)        - Basil version
//   .dev (Boolean)           - true if in development mode
//   .go_version (String)     - Go runtime version
//   .route_count (Integer)   - Number of configured routes

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1"/>
	<meta http-equiv="refresh" content="2"/>
	<title>"Basil Logs" + if (devtools.route) { ": " + devtools.route } else { "" }</title>
	<style>
		* { box-sizing: border-box; margin: 0; padding: 0; }
		body {
			font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
			background: #1a1a2e;
			color: #eee;
			padding: 2rem;
			min-height: 100vh;
		}
		.container {
			max-width: 1200px;
			margin: 0 auto;
		}
		.header {
			display: flex;
			justify-content: space-between;
			align-items: center;
			margin-bottom: 1.5rem;
		}
		h1 {
			font-size: 1.5rem;
			color: #4ecdc4;
		}
		.actions {
			display: flex;
			gap: 0.75rem;
		}
		.btn {
			background: #16213e;
			color: #eee;
			padding: 0.5rem 1rem;
			border-radius: 4px;
			text-decoration: none;
			font-size: 0.875rem;
			border: 1px solid #4ecdc4;
			transition: background 0.2s;
		}
		.btn:hover {
			background: #4ecdc4;
			color: #1a1a2e;
		}
		.btn-danger {
			border-color: #ff6b6b;
		}
		.btn-danger:hover {
			background: #ff6b6b;
		}
		.stats {
			background: #16213e;
			border-radius: 8px;
			padding: 1rem 1.25rem;
			margin-bottom: 1rem;
			border-left: 4px solid #4ecdc4;
			color: #bbb;
			font-size: 0.875rem;
		}
		.empty-state {
			background: #16213e;
			border-radius: 8px;
			padding: 3rem;
			text-align: center;
			color: #7f8c8d;
		}
		.empty-state code {
			background: #1a1a2e;
			padding: 0.2rem 0.5rem;
			border-radius: 4px;
			color: #4ecdc4;
		}
		.log-entry {
			background: #16213e;
			border-radius: 8px;
			padding: 1rem;
			margin-bottom: 0.75rem;
			border-left: 4px solid #4ecdc4;
		}
		.log-entry.warn {
			border-left-color: #ff6b6b;
		}
		.log-header {
			display: flex;
			gap: 1rem;
			margin-bottom: 0.5rem;
			font-size: 0.875rem;
			color: #7f8c8d;
		}
		.log-icon {
			font-size: 1rem;
		}
		.log-file, .log-time {
			font-family: 'Monaco', 'Courier New', monospace;
		}
		.log-call {
			color: #4ecdc4;
			font-family: 'Monaco', 'Courier New', monospace;
			font-size: 0.875rem;
			margin-bottom: 0.5rem;
		}
		.log-value {
			color: #eee;
			font-family: 'Monaco', 'Courier New', monospace;
			font-size: 0.875rem;
			padding: 0.5rem;
			background: #1a1a2e;
			border-radius: 4px;
			overflow-x: auto;
			white-space: pre-wrap;
		}
		.copy-btn {
			background: transparent;
			border: 1px solid #4ecdc4;
			border-radius: 4px;
			color: #4ecdc4;
			cursor: pointer;
			padding: 0.2rem 0.5rem;
			font-size: 0.75rem;
			margin-left: auto;
			opacity: 0.7;
			transition: all 0.2s;
		}
		.copy-btn:hover {
			opacity: 1;
			background: #4ecdc4;
			color: #1a1a2e;
		}
		.copy-btn.copied {
			background: #2ecc71;
			border-color: #2ecc71;
			color: #fff;
		}
	</style>
</head>
<body>
	<div class="container">
		<div class="header">
			<h1>"üìã Basil Logs" + if (devtools.route)  ": " + devtools.route  else  "" </h1>
			<div class="actions">
				<a href="/__/" class="btn">"‚Üê Back"</a>
				if (devtools.log_count > 0) {
					<a href={devtools.clear_url} class="btn btn-danger">"Clear Logs"</a>
				}
			</div>
		</div>

		<div class="stats">
			devtools.log_count + " log " + if (devtools.log_count == 1) "entry"  else "entries" 
		</div>

		if (devtools.log_count == 0) {
			<div class="empty-state">
				"No logs yet. Use " <code>"let {dev} = import @std/dev"</code> " then " <code>"dev.log(value)"</code> " in your handlers."
			</div>
		} else {
			for (i, log in devtools.logs) {
				<div class={"log-entry" + if (log.level == "warn") " warn"  else  ""}>
					<div class="log-header">
						<span class="log-icon">if (log.level == "warn")  "‚ö†Ô∏è"  else  "‚ÑπÔ∏è"</span>
						<span class="log-file">"üìÅ " + log.filename + ":" + log.line</span>
						<span class="log-time">"üïê " + log.timestamp</span>
						<button class="copy-btn" onclick={"copyValue('log-" + i + "')"} title="Copy value">"üìã Copy"</button>
					</div>
					<div class="log-call">"üíª " + log.call</div>
					<div class="log-value" id={"log-" + i}>log.value</div>
				</div>
			}
		}
	</div>
	<script>
	function copyValue(id) {
		const el = document.getElementById(id);
		if (!el) return;
		navigator.clipboard.writeText(el.textContent).then(() => {
			const btn = el.closest('.log-entry').querySelector('.copy-btn');
			if (btn) {
				btn.textContent = '‚úì Copied';
				btn.classList.add('copied');
				setTimeout(() => {
					btn.textContent = 'üìã Copy';
					btn.classList.remove('copied');
				}, 1500);
			}
		});
	}
	</script>
</body>
</html>
