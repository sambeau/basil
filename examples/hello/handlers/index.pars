// index.pars
//
// Parsley uses .pars files for both scripts and modules.
//
// Homepage handler
// Returns a simple HTML page

{Page} = import (@./page.pars)

let title = "Welcome to Basil"
let greeting = "Hello from Parsley!"

<Page title={title}>
  <h1>greeting</h1>
  <p>"This page was generated by a Parsley script."</p>
  <p>"Try the "<a href="/api/hello">"JSON API"</a>" too!"</p>
</Page>