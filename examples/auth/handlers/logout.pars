// logout.pars - Logout page

let {basil} = import @std/basil
{Page} = import(@./page.pars)

<Page title="Sign Out">
  <h1>Sign Out</h1>
  
  if basil.auth.user {
    <p>Click below to sign out of your account.</p>
    <basil.auth.Logout
      text="Sign out"
      redirect="/"
      method="button"
      class="auth-form"
    />
  } else {
    <p>You are not signed in.</p>
    <p><a href="/login">Sign in</a></p>
  }
</Page>
